<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_theme"
    android:orientation="vertical"
    android:layout_marginTop="?android:attr/actionBarSize"
    tools:context="com.example.ahmedsayed.navdrawer.add_new_pet">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_img_id"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/store_icon" />

        <EditText
            android:id="@+id/product_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/txtfieldback"
            android:hint="Product Name"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ProductPrice_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/txtfieldback"
            android:hint="Product Price in EPG."
            android:inputType="number|numberDecimal"
            android:padding="15dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ProductQuantity_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/txtfieldback"
            android:hint="Product Quantity"
            android:inputType="number"
            android:padding="15dp"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/type_product_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="9dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp">

            <RadioButton
                android:id="@+id/animal_id"
                android:text="Animal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <RadioButton
            android:id="@+id/food_id"
            android:text="Food"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
            <RadioButton
                android:id="@+id/Access_id"
                android:text="Accessories"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </RadioGroup>



        <Button
            android:id="@+id/addProductPress_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/txtfieldback"
            android:text="Add this one"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </LinearLayout>



</ScrollView>
