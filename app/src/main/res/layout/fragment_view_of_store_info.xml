<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:background="@drawable/gradient_theme"
    android:orientation="vertical"
    tools:context="com.example.ahmedsayed.navdrawer.add_new_pet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/store_image_id"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/store_icon" />

        <TextView
            android:id="@+id/get_StoreName_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/txtfieldback"
            android:hint="Store Name"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/get_store_contact_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/txtfieldback"
            android:hint="Contact Person"
            android:padding="15dp"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/get_openat_id"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/txtfieldback"
                android:hint="Opened@"

                android:inputType="text"
                android:padding="15dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/get_closeat_id"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                android:layout_marginEnd="27dp"
                android:layout_marginRight="27dp"
                android:background="@drawable/txtfieldback"
                android:hint="Closed@"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="20sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/get_adress_store_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/txtfieldback"
            android:hint="Address"
            android:inputType="text"
            android:padding="15dp"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updated_Store_info_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/border_registration"
                android:text="Update Store Info"
                android:textAllCaps="false"

                android:textSize="20sp" />

            <Button
                android:id="@+id/delete_store_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_registration"
                android:text="Delete This Store"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/view_product_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/txtfieldback"
                android:text="View Products"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:textStyle="italic" />


        </RelativeLayout>


    </LinearLayout>


</ScrollView>
