<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:background="@drawable/gradient_theme"
    android:orientation="vertical"
    tools:context="com.example.ahmedsayed.navdrawer.add_new_pet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/clinic_icon" />

        <TextView
            android:id="@+id/get_bussinessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/txtfieldback"
            android:hint="Bussiness Name"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/get_contact_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/txtfieldback"
            android:hint="Contact Person"
            android:inputType="phone"
            android:padding="15dp"
            android:textSize="20sp" />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/openat_get_id"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:layout_marginStart="24dp"
               android:layout_marginTop="5dp"
               android:background="@drawable/txtfieldback"
               android:hint="Opened@"
               android:inputType="text"
               android:padding="15dp"
               android:textSize="20sp"

               />

           <TextView
               android:id="@+id/closeat_get_id"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/openat_get_id"
               android:layout_alignBottom="@+id/openat_get_id"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:layout_marginEnd="24dp"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"

               android:background="@drawable/txtfieldback"
               android:hint="Closed@"
               android:inputType="text"
               android:padding="15dp"
               android:textSize="20sp" />
       </RelativeLayout>


        <TextView
            android:id="@+id/get_adress_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/txtfieldback"
            android:hint="Address"
            android:inputType="text"
            android:padding="15dp"
            android:textSize="20sp" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <Button
        android:id="@+id/updated_clinic_info"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_registration"
        android:text="Update Clinic Info"
        android:textAllCaps="false"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"

        android:textSize="20sp" />

    <Button
        android:id="@+id/delete_clinic_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/border_registration"
        android:text="Delete This Clinic"
        android:textAllCaps="false"
        android:textSize="20sp" />

</RelativeLayout>


    </LinearLayout>


</ScrollView>
